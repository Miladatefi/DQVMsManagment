@model IEnumerable<DQVMsManagement.Models.VMInfo>

@{
    ViewData["Title"] = "VMs Dashboard";
}

<h1>Hyper-V Virtual Machines</h1>

<p class="text-secondary">
    Below is a list of VMs on this host along with their current CPU and memory usage.
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>State</th>
            <th>CPU Usage (%)</th>
            <th>Memory (MB)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var vm in Model)
    {
        <tr>
            <td>@vm.Name</td>
            <td>@vm.State</td>
            <td>@vm.CPUUsage%</td>
            <td>@vm.MemoryAssignedMB</td>
            <td class="text-center">
                @if (vm.State.Equals("Running", StringComparison.OrdinalIgnoreCase))
                {
                    <form asp-action="Stop"   asp-controller="VMs" method="post" class="d-inline">
                        <input type="hidden" name="name" value="@vm.Name" />
                        <button type="submit" class="btn btn-danger btn-sm me-1">Stop</button>
                    </form>
                    <form asp-action="Restart" asp-controller="VMs" method="post" class="d-inline">
                        <input type="hidden" name="name" value="@vm.Name" />
                        <button type="submit" class="btn btn-warning btn-sm">Restart</button>
                    </form>
                }
                else
                {
                    <form asp-action="Start" asp-controller="VMs" method="post" class="d-inline">
                        <input type="hidden" name="name" value="@vm.Name" />
                        <button type="submit" class="btn btn-success btn-sm">Start</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <!-- Optional: add auto-refresh or confirmation scripts here -->
}
