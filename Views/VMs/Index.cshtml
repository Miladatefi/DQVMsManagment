@model IEnumerable<DQVMsManagement.Models.VMInfo>
@using System

@{
    ViewData["Title"] = "VMs Dashboard";
}

<h1>Hyper-V Virtual Machines</h1>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>State</th>
            <th>CPU Usage (%)</th>
            <th>Memory (MB)</th>
            <th>Up Time</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var vm in Model)
    {
        <tr>
            <td>@vm.Name</td>
            <td>@vm.State</td>
            <td>@vm.CPUUsage%</td>
            <td>@vm.MemoryAssignedMB</td>
            <td>
                @* Display hh:mm:ss (or “–” if not running) *@
                @(vm.UpTime.HasValue
                    ? vm.UpTime.Value.ToString(@"dd\:hh\:mm\:ss")
                    : "–")
            </td>
            <td class="text-center">
                @if (vm.State.Equals("Running", StringComparison.OrdinalIgnoreCase))
                {
                    <form asp-action="Stop" method="post" class="d-inline">
                        <input type="hidden" name="name" value="@vm.Name" />
                        <button class="btn btn-danger btn-sm me-1">Stop</button>
                    </form>
                    <form asp-action="Restart" method="post" class="d-inline">
                        <input type="hidden" name="name" value="@vm.Name" />
                        <button class="btn btn-warning btn-sm">Restart</button>
                    </form>
                }
                else
                {
                    <form asp-action="Start" method="post" class="d-inline">
                        <input type="hidden" name="name" value="@vm.Name" />
                        <button class="btn btn-success btn-sm">Start</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
